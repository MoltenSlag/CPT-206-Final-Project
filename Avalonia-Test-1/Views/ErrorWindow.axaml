<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:vm="using:Avalonia_Test_1.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Avalonia_Test_1.Views"
		mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
        x:Class="Avalonia_Test_1.Views.ErrorWindow"
		WindowStartupLocation="CenterOwner"
		SizeToContent="WidthAndHeight"
        Title="Error">
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="error" MaxWidth="280" TextWrapping="Wrap">Error Text</TextBlock>
	</StackPanel>
</Window>
